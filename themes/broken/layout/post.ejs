<article>
    <div class="container" style="margin-top: 8rem;">
        <h1><%- page.title %></h1> 
        <div class="container">
            <p style="color: gray;">发布时间：<%- date(page.date, "YYYY-MM-DD") %> &nbsp;分类：<% page.categories.forEach(function(category) { %><span class="badge rounded-pill bg-dark"><%= category.name %></span><% }); %>
           </p>
        <br>
        <div class="article-content">
            <%- page.content %>  
        </div>
        &nbsp;
        <%
        let author = page.author;  // 获取文章头部（Front Matter）里定义的作者字段值，比如 'Eric'
        let authorInfo = null;
        if (theme.authors && theme.authors[author]) {
          authorInfo = theme.authors[author];  
        } else {
          authorInfo = {
            name: '未知署名',
            avatar_url: 'https://static.turboflint.cn/image/user.svg', 
          };
        }
        %>
        <a href="<%= '/author_' + authorInfo.name.toLowerCase() %>" style="text-decoration: none;">
            <div class="badge bg-primary text-white d-flex align-items-center">
              <% if (authorInfo.avatar_url) { %>
                <img src="<%= authorInfo.avatar_url %>" class="rounded-circle me-3" alt="头像" width="50" height="50">
              <% } else { %>
                <img src="#" class="rounded-circle me-3" alt="头像" width="50" height="50" style="visibility: hidden;">
              <% } %>
              <div style="font-size: 16px;">
                <%= authorInfo.name %><br>
                <span style="font-size: 12px;color: gray;">本文作者</span>
              </div>
            </div>
          </a> 
</article>
<br>
<hr class="divider">